<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    tools:context="io.matthieuhostache.loustics.MainActivity"
    tools:ignore="MergeRootFrame"
    android:weightSum="1">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/listChildName" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_weight="1.04"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/addchild"
        android:layout_below="@+id/listChildName" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CrÃ©er son compte"
        android:id="@+id/addchild"
        android:layout_gravity="bottom"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:singleLine="false"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
